{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "build",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es6", "dom", "es2016", "es2017", "ES2023.Array"],
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "noEmit": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "build",
    "storybook-static",
    "src/**/*.stories*.tsx"
  ],
  "include": ["src/**/**/*"]
}
